<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background = "@drawable/home" >
    

    
 <!-- Last Button - Eat -->
  <ImageView android:id="@+id/imageView1"
        android:layout_width="144px"
        android:layout_height="135px"
        android:layout_marginTop="1145px"
        android:layout_marginLeft="576px"
        android:contentDescription="This is the eat screen"
        android:onClick="eatClicked"
        android:src="@drawable/eat"/>

   
  <!-- Fourth Button - Facts -->
  <ImageView android:id="@+id/imageView1"
        android:layout_width="144px"
        android:layout_height="135px"
        android:layout_marginTop="1145px"
        android:layout_marginLeft="432px"
        android:contentDescription="This is the facts screen"
        android:onClick="factsClicked"
        android:src="@drawable/facts"/>

    <!-- Third Button - Review -->
  <ImageView android:id="@+id/imageView1"
        android:layout_width="144px"
        android:layout_height="135px"
        android:layout_marginTop="1145px"
        android:layout_marginLeft="288px"
        android:contentDescription="This is the review screen"
        android:onClick="reviewClicked"
        android:src="@drawable/review"/>
                    
                    
  <!-- Second Button - Terms -->
  <ImageView android:id="@+id/imageView1"
        android:layout_width="144px"
        android:layout_height="135px"
        android:layout_marginTop="1145px"
        android:layout_marginLeft="144px"
        android:contentDescription="This is the terms screen"
        android:onClick="termsClicked"
        android:src="@drawable/terms"/>
            
  <!-- First button - Sip -->
        <ImageView android:id="@+id/imageView1"
        android:layout_width="144px"
        android:layout_height="135px"
        android:layout_marginTop="1145px"
        android:contentDescription="This is the sip screen"
        android:src="@drawable/sip_pressed"
                android:onClick="sipClicked"/>
        
  <!-- Home Button -->		
<ImageView android:id="@+id/imageViewHelp"
     android:layout_height="50px"
     android:layout_width="50px"
     android:layout_marginTop = "5px"
     android:layout_marginLeft = "10px"
     android:contentDescription="This is the home button"
     android:onClick="home"
     android:src="@drawable/home_button"/>


<!-- Help Button -->		
<ImageView android:id="@+id/imageViewHelp"
     android:layout_height="50px"
     android:layout_width="50px"
     android:layout_marginTop = "5px"
     android:layout_marginLeft = "655px"
     android:contentDescription="This is the eat screen"
     android:onClick="help"
     android:src="@drawable/help"/>
    
<!-- Color Button -->

    <Button android:id="@+id/colorButton"
     	android:layout_height="120px"
     	android:layout_width="wrap_content"
     	android:layout_marginTop = "450px"
    	android:text="Color"
    	android:background="@drawable/cork"
    	android:onClick="colorClicked" />
    
<!-- Varietal Button -->

    <Button android:id="@+id/varietalButton"
     	android:layout_height="120px"
     	android:layout_width="wrap_content"
     	android:layout_marginTop = "575px"
    	android:text="Varietal"
    	android:background="@drawable/cork"
    	android:onClick="varietalClicked" />
    
<!-- Descriptor Button -->

    <Button android:id="@+id/descriptorButton"
     	android:layout_height="120px"
     	android:layout_width="wrap_content"
     	android:layout_marginTop = "700px"
    	android:text="Descriptor"
    	android:background="@drawable/cork"
    	android:onClick="descriptorClicked" />

    


    <!-- Red Button -->		
  <ImageView android:id="@+id/redButton"
     android:layout_height="620px"
     android:layout_width="360px"
     android:layout_marginTop = "300px"
     android:contentDescription="Click this for red wine"
     android:onClick="redWineClicked"
     android:src="@drawable/red_bottle"/>
  
    <!-- White Button -->		
  <ImageView android:id="@+id/whiteButton"
     android:layout_height="620px"
     android:layout_width="360px"
     android:layout_marginTop = "300px"
     android:layout_marginLeft = "360px"
     android:contentDescription="Click this for white wine"
     android:onClick="whiteWineClicked"
     android:src="@drawable/white_bottle"/>

      
            
</RelativeLayout>
